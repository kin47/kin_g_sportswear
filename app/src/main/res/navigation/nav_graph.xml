<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">
    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.kingsportswear.presentation.login.LoginFragment"
        android:label="@string/login_fragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_LoginFragment_to_RegisterFragment"
            app:destination="@id/RegisterFragment" />
        <action
            android:id="@+id/action_LoginFragment_to_CoreFragment"
            app:destination="@id/CoreFragment" />
    </fragment>
    <fragment
        android:id="@+id/RegisterFragment"
        android:name="com.example.kingsportswear.presentation.register.RegisterFragment"
        android:label="@string/register_fragment"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_RegisterFragment_to_LoginFragment"
            app:destination="@id/LoginFragment" />
        <action
            android:id="@+id/action_RegisterFragment_to_CoreFragment"
            app:destination="@id/CoreFragment" />
    </fragment>
    <fragment
        android:id="@+id/CoreFragment"
        android:name="com.example.kingsportswear.presentation.core.CoreFragment"
        android:label="@string/core_fragment"
        tools:layout="@layout/fragment_core">
        <action
            android:id="@+id/action_CoreFragment_to_LoginFragment"
            app:destination="@id/LoginFragment" />
    </fragment>
</navigation>